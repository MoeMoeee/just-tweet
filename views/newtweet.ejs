<%- include('partials/head') %>

    <!-- display all the tweets -->
    <h1 class="text-center">New Tweet</h1>
    <form class="ms-3">
        <div class="form-group">
          <label for="inputEmail">Username</label>
          <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter your username:...">
        </div>
        <div class="form-group">
          <label for="newTweet">New Tweet</label>
          <input type="password" class="form-control" id="newTweet" placeholder="Share your thoughts...">
        </div>
        <button type="submit" class="ml-5 mt-5 btn btn-primary">Tweet</button>
    </form>

<%- include('partials/footer') %>
